@model IEnumerable<TagsDto>
@{
	ViewBag.Title = "Tags";
}

<div class="container m-5" style="max-width:450px;">

		<a  asp-controller="tag" asp-action="Upsert" asp-area="admin" class="btn  btn-primary px-4 d-inline-block mb-2">
			<i class="bi bi-plus-circle"></i> Create
		</a>

		@if (Model.Count() > 0)
		{
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Tag Name</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var tag in Model)
					{
						<tr>
							<td>@tag.Tag</td>
							<td>
								<a class="btn btn-sm btn-success" asp-controller="tag" asp-action="upsert" asp-area="admin" asp-route-id="@tag.Id">Edit</a>
								<a class="btn btn-sm btn-danger" asp-controller="tag" asp-action="delete" asp-area="admin" asp-route-id="@tag.Id">Delete</a>

							</td>
						</tr>

					}
				</tbody>


			</table>
		}


</div>