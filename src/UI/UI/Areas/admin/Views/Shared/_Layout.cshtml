<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body class="d-flex flex-wrap min-vh-100 overflow-x-hidden">

	<header class="flex-grow-1 w-100 shadow bg-white" style="height:5rem;">

		<nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
			<div class="container mx-auto" style="max-width:1200px;">


				<ul class="navbar-nav ms-auto">

					<li class="nav-item me-2">
						<a class="nav-link text-primary text-decoration-underline" asp-controller="Home" asp-action="index">Visit Site</a>
					</li>

					<li class="nav-item">
						<partial name="_Profile" />
					</li>

				</ul>
			</div>
		</nav>
	</header>

	<aside class="p-0 bg-white shadow" style="width:300px;min-height:calc(100vh - 5rem);">

		<ul class="p-0 my-5 flex-column d-flex gap-3">
			
			<a class="sidebar-link @(ViewBag.Title == "Dashboard" ? "active": "")" asp-controller="dashboard" asp-action="home" asp-area="admin">
				<span class="sidebar-link-text">Dashboard</span>
			</a>

			<a class="sidebar-link @(ViewBag.Title == "Tags" ? "active": "")" asp-controller="tag" asp-action="All" asp-area="admin">
				<span class="sidebar-link-text">Tags</span>
			</a>

			<a class="sidebar-link @(ViewBag.Title == "Collections" ? "active": "")" asp-controller="Collection" asp-action="All" asp-area="admin">
				<span class="sidebar-link-text">Product Collections</span>
			</a>

			<a class="sidebar-link @(ViewBag.Title == "Products" ? "active": "")" asp-controller="Product" asp-action="All" asp-area="admin">
				<span class="sidebar-link-text">Products</span>
			</a>

		</ul>

	</aside>

	<main role="main"  class="flex-grow-1 "  style="min-height:calc(100vh - 5rem);">
		@RenderBody()
	</main>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
