@model ProductCollectionDto

@{
	ViewBag.Title = "Collections";
}

<div class="container mx-auto m-5">
	<div class="card p-4 mx-auto m-5" style="max-width:400px;">
		<div class="card-header">
			<h3 class="card-title text-center">@(Model.Id == Guid.Empty ? "Create" : "Update") Collection</h3>
		</div>
		<div class="card-body">

			<div class="text-danger my-2" asp-validation-summary="All">
			</div>

			<form asp-area="admin" asp-controller="collection" asp-action="upsert">

				@if (Model.Id != Guid.Empty)
				{
					<input type="hidden" asp-for="Id" value="@Model.Id" />
				}


				<div class="mb-3 vstack">
					<label class="text-light-emphasis">Collection Name</label>
					<input asp-for="CollectionName" class="form-control" />
					<span class="text-danger" asp-validation-for="CollectionName"></span>
				</div>



				<button class="btn btn-success d-block w-75 mx-auto" type="submit">@(Model.Id == Guid.Empty ? "Create" : "Update") Collection</button>

			</form>
		</div>
	</div>
</div>


@section scripts {
	<partial name="_ValidationScriptsPartial" />
}


