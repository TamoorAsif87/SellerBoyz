@inject IProfileService profileService;

@{
    ProfileDto profile = await profileService.GetProfile(User.Identity?.Name!);
}


<div class="dropdown">
    <span class="border nav-link p-1 px-3" data-bs-toggle="dropdown" aria-expanded="false" style="border-radius:1000px;border-width:5px;cursor:pointer;">
        <i class="fs-5 bi bi-list-task"></i>
        @if(profile.ProfileImage != null) 
        {
            <img src="@profile.ProfileImage" width="30" height="30" class="object-fit-cover rounded-circle align-top"/>
        }
        else
        {
            <i class="fs-5 bi bi-person"></i>
        }

    </span>
    <ul class="dropdown-menu">
        @if(User.IsInRole("admin"))
        {
            <li><a class="dropdown-item" asp-area="admin" asp-controller="dashboard" asp-action="home">Dashboard</a></li>
        }
        <li><a class="dropdown-item" asp-controller="profile" asp-action="userProfile" >Profile</a></li>
        <li><a class="dropdown-item" href="#">WhishList</a></li>
        <li><a class="dropdown-item"  asp-controller="profile" asp-action="updatePassword" >Change Password</a></li>
        <li><a class="dropdown-item" asp-controller="auth" asp-action="logout">Logout</a></li>
    </ul>
</div>


